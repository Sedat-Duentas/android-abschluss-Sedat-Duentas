<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- FÃ¼r Notizen siehe fragment_log -->
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.QuizCityFragment">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mc_quiz_city_arrow_left"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_quiz_city_arrow_left"
                    android:layout_width="48dp"
                    android:layout_height="49dp"
                    app:srcCompat="@drawable/arrowleft"
                    tools:layout_editor_absoluteX="209dp"
                    tools:layout_editor_absoluteY="17dp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mc_quiz_city_home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_quiz_city_home"
                    android:layout_width="48dp"
                    android:layout_height="49dp"
                    app:srcCompat="@drawable/home">
                </ImageView>

            </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_quiz_city"
            android:layout_width="346dp"
            android:layout_height="208dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="32dp"
            android:background="@color/orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Berlin"
            android:textSize="56dp"
            android:textColor="@color/white"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn1_quiz"
            android:layout_width="168dp"
            android:layout_height="100dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="77dp"
            android:backgroundTint="@color/orange"
            android:text="Land1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_quiz_city" />

        <Button
            android:id="@+id/btn2_quiz"
            android:layout_width="168dp"
            android:layout_height="100dp"
            android:layout_marginTop="77dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/orange"
            android:text="Land2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_quiz_city" />

        <Button
            android:id="@+id/btn3_quiz"
            android:layout_width="168dp"
            android:layout_height="100dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="112dp"
            android:backgroundTint="@color/orange"
            android:text="Land3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn4_quiz"
            android:layout_width="168dp"
            android:layout_height="100dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="112dp"
            android:backgroundTint="@color/orange"
            android:text="Land4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>